---
// 1. Definisikan "cetakan" atau "kontrak" data yang kita harapkan
interface Link {
  url: string;
  text: string;
}

interface Props {
  name: string;
  bio: string;
  imgSrc: string;
  links: Link[];
}

// 2. Tangkap data yang dilemparkan dari luar (props)
const { name, bio, imgSrc, links } = Astro.props;
---

<div class="max-w-sm mx-auto bg-slate-800 rounded-2xl shadow-lg p-8 flex flex-col items-center text-center">

  <img class="w-32 h-32 rounded-full border-4 border-lime-400 mb-4" src={imgSrc} alt={"Foto profil " + name} />

  <h2 class="text-3xl font-bold text-white">{name}</h2>
  <p class="text-slate-300 mt-1 mb-6">{bio}</p>

  <div class="w-full flex flex-col space-y-4">
    {links.map(link => (
      <a href={link.url} class="w-full bg-slate-700 text-white font-semibold py-3 rounded-lg hover:bg-lime-500 transition-colors">
        {link.text}
      </a>
    ))}
  </div>

</div>